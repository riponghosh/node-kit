{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "allowUnreachableCode": false
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/"
  ]
}
